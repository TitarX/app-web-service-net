@{
    ViewBag.Title = "Заявки";
    Layout = "~/Views/Home/_IndexLayout.cshtml";
}

<div id="header-wrapper">
    <h1 class="text-center text-uppercase">Управление заявками</h1>
    <button id="add-button" class="btn btn-xs btn-primary" data-bind="click: addApplication">+</button>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Номер заявки</th>
                <th>Дата заявки</th>
                <th>Наименование организации</th>
                <th>ФИО пользователя</th>
                <th>Должность</th>
                <th>Email</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: model.applications">
            <tr>
                <td data-bind="text: NumberApplication"></td>
                <td data-bind="text: DateApplication"></td>
                <td data-bind="text: CompanyName"></td>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: Position"></td>
                <td data-bind="text: Email"></td>
                <td>
                    <button class="btn btn-xs btn-primary" data-bind="click: changeApplication">Изменить</button>
                    <button class="btn btn-xs btn-primary" data-bind="click: deleteApplication">Удалить</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div id="alert-modal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center text-uppercase">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <div class="modal-title" data-bind="text: model.modal.title"></div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="modal-message" data-bind="html: model.modal.message"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click: reOpenApplicationWindow">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<div id="add-modal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center text-uppercase">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <div class="modal-title" data-bind="text: model.add.title"></div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="modal-message">
                        <input type="hidden" data-bind="value: model.add.number" />
                        <input type="hidden" data-bind="value: model.add.isreopen" />
                        <div class="form-group">
                            <label>Наименование организации</label>
                            <input required class="form-control" data-bind="value: model.add.company" />
                        </div>
                        <div class="form-group">
                            <label>ФИО пользователя</label>
                            <input required class="form-control" data-bind="value: model.add.user" />
                        </div>
                        <div class="form-group">
                            <label>Должность</label>
                            <input required class="form-control" data-bind="value: model.add.position" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input required class="form-control" data-bind="value: model.add.email" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="text: model.add.button, click: addApplicationRequest"></button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<div id="delete-modal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center text-uppercase">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <div class="modal-title">Подтверждение удаления</div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="modal-message">
                        Заявка с номером № <strong data-bind="text: model.del.id"></strong> будет удалена<br />Продолжить?
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click: deleteApplicationRequest">Да</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Нет</button>
            </div>
        </div>
    </div>
</div>
